<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProductStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css" integrity="sha384-SZXxX4whJ79/gErwcOYf+zWLeJdY/qpuqC4cAa9rOGUstPomtqpuNWT9wdPEn2fk" crossorigin="anonymous">
</head>
<body>
    <header>
        <nav class="navbar-fluid navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 pb-3 pt-3">

            <div class="container">
                <div class="row">
                    <div class="col-sm logo">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"><h1>ProductStore</h1></a>
                    </div>

                    <div class="col-auto navIcons">

                        <div class="row align-items-lg-center justify-content-center">

                            <div class="col-auto"><partial name="_LoginPartial" /></div>

                            <div class="col-auto">Orders</div>

                            <div class="col-auto">My Account</div>

                            <div class="col-auto">
                                <i class="fa" style="font-size:30px">&#xf07a;</i>
                                <span class='badge badge-warning' id='lblCartCount'> 0 </span>
                            </div>

                            <div class="col-auto">
                                <i class="fa fa-heart" aria-hidden="true" style="font-size: 30px;"></i>
                            </div>

                        </div>

                    </div>
                </div>

                <div class="row">
                    <div class="col"><partial name="_Dropdown" /></div>
                    <div class="col-lg">
                        <div class="input-group">
                            <input type="search" class="form-control rounded" placeholder="Search" aria-label="Search" aria-describedby="search-addon" />
                            <button type="button" class="btn btn-outline-primary" data-mdb-ripple-init>search</button>
                        </div>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-lg"></div>
                    <div class="col-auto"><a class="text-dark text-decoration-none" asp-controller="Home" asp-action="Products">Buy Products</a></div>
                    <div class="col-auto"><a class="text-dark text-decoration-none" asp-controller="Home" asp-action="Index">What's new</a></div>
                    <div class="col-auto"><a class="text-dark text-decoration-none" asp-controller="Home" asp-action="Index">Brands</a></div>
                    <div class="col-auto"><a class="text-dark text-decoration-none" asp-controller="Home" asp-action="Index">Clearance Sale</a></div>
                    <div class="col-auto"><a class="text-dark text-decoration-none" asp-controller="Home" asp-action="Index">Deals and Promotions</a></div>
                    <div class="col-auto"><a class="text-dark text-decoration-none" asp-controller="Home" asp-action="Index">Help and Centre</a></div>
                    <div class="col-lg"></div>
                </div>


            </div>
        </nav>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted position-absolute w-100 text-black pt-3 mt-5">
        <partial name="_Footer" />
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
