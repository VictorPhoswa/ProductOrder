@model ProductStore.Models.ViewModels.HomeIndexViewModel
@{
    ViewData["Title"] = "Home Page";
    
}

<div class="row">
    <div class="col-md-2">
        <div class="btn-group-vertical">
            <ul>
                @foreach (var item in Model.Categories)
                {
                    <li>
                        <a class="btn-block" asp-controller="Home" asp-action="Products" asp-route-id="@item.Id">@item.Name</a>
                    </li>
                }
            </ul>
        </div>
    </div>
    <div class="col-md-10">
        <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="/css/Images/Books.jpg" class="d-block w-25 h-25" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="/css/Images/modi.jpg" class="d-block w-25 h-25" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="/css/Images/Typek.jpg" class="d-block w-25 h-25" alt="...">
                </div>
            </div>
        </div>
    </div>
</div>
<div style="display:grid; grid-template-columns: repeat(3, 1fr); gap: 10px; row-gap: 20px;">

    @foreach (var item in Model.Products)
    {
        <div class="card" style="width: 18rem;">
            <img src="data:image/*;base64,@(Convert.ToBase64String(item.PreviewIage))" class="card-img-top" alt="product">
            <div class="card-body">
                <h5 class="card-title">@item.ShortDescription</h5>
                <p class="card-text">@item.Category.Name</p>
                <p class="card-text text-danger">R @item.Price</p>
                <a asp-controller="Products" asp-action="ProductPage" asp-route-id="@item.Id" class="btn btn-warning">Buy</a>
            </div>
        </div>

    }
</div>





